<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/calculate_imb_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/imb_button_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/height_edit_text"
        app:layout_constraintStart_toStartOf="@id/weight_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <EditText
        android:id="@+id/height_edit_text"
        android:layout_width="@dimen/imb_edit_text_length"
        android:layout_height="wrap_content"
        android:hint="@string/height_title"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/weight_edit_text"
        android:layout_width="@dimen/imb_edit_text_length"
        android:layout_height="wrap_content"
        android:hint="@string/weight_title"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/imb_description_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imb_description_title"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imb_coefficient_text_view"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/imb_coefficient_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/imb_coefficient_title"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculate_imb_button"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/imb_coefficient_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_text"
        android:textColor="@color/black"
        android:textSize="@dimen/info_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imb_coefficient_title_text_view"
        app:layout_constraintVertical_bias="0.05"/>

    <TextView
        android:id="@+id/imb_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/no_data_text"
        android:textColor="@color/black"
        android:textSize="@dimen/info_text_size"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/imb_description_text_margins"
        android:layout_marginEnd="@dimen/imb_description_text_margins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imb_description_title_text_view"
        app:layout_constraintVertical_bias="0.05" />

</androidx.constraintlayout.widget.ConstraintLayout>