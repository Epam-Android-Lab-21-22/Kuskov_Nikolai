<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    app:layoutDescription="@xml/carousel_scene"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:alpha="0"
        android:background="@drawable/image_rounded_background"
        android:elevation="0dp"
        android:gravity="center"
        android:rotation="-60"
        android:src="@drawable/ic_abc_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="2dp"
        android:gravity="center"
        android:rotation="-45"
        android:src="@drawable/ic_art_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="4dp"
        android:gravity="center"
        android:rotation="-30"
        android:src="@drawable/ic_biology_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="330"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="6dp"
        android:gravity="center"
        android:rotation="-15"
        android:src="@drawable/ic_geography_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="345"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/selected_carousel_item_width"
        android:layout_height="@dimen/selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="10dp"
        android:gravity="center"
        android:rotation="0"
        android:src="@drawable/ic_science_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="6dp"
        android:gravity="center"
        android:rotation="15"
        android:src="@drawable/ic_mathematic_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="15"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="4dp"
        android:gravity="center"
        android:rotation="30"
        android:src="@drawable/ic_music_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="2dp"
        android:gravity="center"
        android:rotation="45"
        android:src="@drawable/ic_physics_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/not_selected_carousel_item_width"
        android:layout_height="@dimen/not_selected_carousel_item_height"
        android:background="@drawable/image_rounded_background"
        android:elevation="0dp"
        android:gravity="center"
        android:rotation="60"
        android:src="@drawable/ic_sports_108"
        app:layout_constraintCircle="@+id/center"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="@dimen/carousel_radius" />

    <Space
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center"
        android:layout_marginTop="-25dp"/>

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_text_view" />

    <EditText
        android:id="@+id/answer_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="26sp"
        android:padding="5dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edit_text_rounded_background"
        android:hint="@string/answer_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        app:layout_constraintEnd_toStartOf="@id/goNextButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.2"/>

    <Button
        android:id="@+id/goNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_title"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/answer_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/answer_edit_text"
        app:layout_constraintTop_toTopOf="@id/answer_edit_text"/>

    <androidx.constraintlayout.helper.widget.Carousel
        android:id="@+id/carousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:carousel_backwardTransition="@+id/backward"
        app:carousel_firstView="@+id/imageView4"
        app:carousel_forwardTransition="@+id/forward"
        app:carousel_nextState="@+id/next"
        app:carousel_previousState="@+id/previous"
        app:constraint_referenced_ids="imageView0,imageView1,imageView2, imageView3, imageView4, imageView5, imageView6, imageView7, imageView8" />

    <TextView
        android:id="@+id/button_clicked_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_clicked_default_calue"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/edit_text_count"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/entered_symbols_default_value"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.motion.widget.MotionLayout>