<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true">

    <TextView
        android:id="@+id/song_preview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="start"
        tools:text="Song title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/song_preview_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        tools:text="Song Artist"
        app:layout_constraintStart_toStartOf="@id/song_preview_title"
        app:layout_constraintTop_toBottomOf="@id/song_preview_title"/>

    <TextView
        android:id="@+id/song_preview_cover_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/url_color"
        tools:text="htttp:google.com"
        app:layout_constraintStart_toStartOf="@id/song_preview_title"
        app:layout_constraintTop_toBottomOf="@id/song_preview_artist"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>